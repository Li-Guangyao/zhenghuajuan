page {
  background-color: var(--themeColor);
  padding-bottom: 144rpx;
  text-align: center;
}
.title-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: flex-end;
  top: 0;
  left: 0;
  right: 0;
  height: 168rpx;
  background-color: var(--themeColor);
  z-index: 4;
}
.title-bar .title {
  margin-left: 8%;
  color: white;
  font-size: 36rpx;
  line-height: 92rpx;
}

.btn-add {
  position: fixed;
  border-radius: 100%;
  width: 128rpx;
  height: 128rpx;
  bottom: 192rpx;
  right: 36rpx;
}
.page {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 144rpx;
  overflow-y: scroll;
}
.bottom-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: var(--themeBackgroundColor);
  border-top: var(--borderColor) solid 1rpx;
  width: 100%;
  height: 144rpx;
  bottom: 0;
}
.bottom-bar image {
  height: 100%;
}
.main {
  position: absolute;
  top: 15%;
  width: 100%;
  height: fit-content;
  background-color: white;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding-top: 32rpx;
  padding-bottom: 144rpx;
}
.main .shopName{
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  color:#2f2f2f;
}
.main .circle{
  margin: 0rpx auto 32rpx auto;
  border-radius: 50rpx;
  box-shadow:0 0 10rpx #2f2f2f;
  }
  .main .leftArrow{
    width: 10px;
    height: 10px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: absolute;
    left: 20rpx;
    transform: rotate(-135deg);
    margin-top:15%;
    }
.main .rightArrow{
    width: 10px;
    height: 10px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: absolute;
    right: 20rpx;
    transform: rotate(45deg);
    margin-top:15%;
    }
  .main .circle .btn-changeFood{
  position: absolute;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  top: 50%;
  height: 80%;
  margin: auto;

}
.main .activity-name,
.main .activity-duration {
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  margin: 24rpx 0 16rpx 0;
  height: 80rpx;
  width: 70%;
  border-radius: 50rpx; /*实现圆角*/
  background-color: #fff2db;
  color: var(--themeColor);
}
.main .activity-name .tip,
.main .activity-duration .tip {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 35%;
  height: inherit;
  border-radius: inherit;
  border: 5rpx solid #fea403;
}
.main .activity-name .input,
.main .activity-duration .input {
  text-align: left;
  flex: 3;
  margin: 0 20rpx;
  color: #2f2f2f;
}
.main .activity-name .minute,
.main .activity-duration .minute {
  flex: 1;
  margin: 0 15rpx;
}
