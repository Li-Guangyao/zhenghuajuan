<!-- 左上角标题 -->
<view class="title-bar">
	<view class="title">动态</view>
</view>

<!-- 内容 -->
<view class="main">
	<view class="shopName">{{shopName}}店</view>
	<!--<post-display id="postDisplay" postList="{{postList}}" userInfo="{{userInfo}}"></post-display>

	<image class="btn-add" src="../../icon2/add.png" mode="aspectFill" bindtap="toPostAdd"></image>-->
	<view class="leftArrow"></view>
	<view class="rightArrow"></view>
	<canvas type="2d" class="circle">
	<image class="btn-changeFood" src="../../icon2/rolling.png" mode="heightFix"></image>
</canvas>
<view class="activity-name">
		<view class="tip">口味</view>
		<input class="input" value="{{activityName}}" bindinput="inputActivityName" maxlength="5"
			placeholder="写下你专注的内容吧"></input>
	</view>
	<view class="activity-duration">
		<view class="tip">蒸制时间</view>
		<view class="input" bindtap="showPopup">{{durations[durationIndex]}}</view>
		<view class="minute">min</view>
	</view>
	
	<van-button round color="#ffa600" class="btn-setActivity" bind:click="StartCook" >
	<text>开始蒸制\nGet Started</text>
	</van-button>
	
</view>

<view class="bottom-bar">
	<image src="../../icon/postSelected.png" mode="aspectFit"></image>
	<image src="../../icon/menuRoll.png" mode="aspectFit" bindtap="toRoll"></image>
	<image src="../../icon/my.png" mode="aspectFit" bindtap="toMy"></image>
</view>