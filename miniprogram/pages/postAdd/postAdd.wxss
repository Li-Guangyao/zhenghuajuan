page {
  background-color: var(--themeBackgroundColor);
}
.van-nav-bar {
  background-color: var(--themeColor) !important;
}
.van-nav-bar .van-icon:before {
  color: white !important;
  font-size: 36rpx !important;
}
.van-nav-bar__text {
  margin-left: -12rpx !important;
  color: white !important;
  font-size: 36rpx !important;
  line-height: 36rpx !important;
  background-color: transparent !important;
}
.post {
  background-color: white;
  position: absolute;
  width: 100%;
  top: 10%;
}
.post .content-input {
  margin: 0 10rpx;
  padding: 15rpx 15rpx;
  width: 94%;
  min-height: 400rpx;
  max-height: 900rpx;
  overflow: scroll;
}
.post .upload-photo {
  width: 100% !important;
  background-color: #ffffff;
  padding: 0 15rpx;
}
.post .location {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 48rpx;
  line-height: 42rpx;
  margin: 12rpx;
  margin-left: 24rpx;
  font-size: 36rpx;
}
.post .location text {
  font-size: 28rpx;
  margin-left: 20rpx;
}
.post .set-anonymous {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 48rpx;
  line-height: 42rpx;
  margin: 12rpx;
  margin-left: 24rpx;
}
.post .set-anonymous .tip {
  margin: 0 10rpx;
}
.post .show-location {
  display: inline-flex;
  margin: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: white;
  font-size: 28rpx;
  background-color: var(--themeColor);
}
.post .show-location .location-name {
  float: left;
}
.post .show-location .location-delete {
  float: left;
  margin-left: 8rpx;
}
.buttons {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 92rpx;
  color: white;
  line-height: 92rpx;
  text-align: center;
  background-color: var(--themeColor);
  padding-bottom: env(safe-area-inset-bottom);
}
