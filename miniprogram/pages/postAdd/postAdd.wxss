page {
  background-color: var(--themeBackgroundColor);
}
.post {
  overflow-x: hidden;
  background-color: white;
}
.post .content-input {
  margin: 0 10rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 400rpx;
  max-height: 900rpx;
  overflow: scroll;
}
.post .location {
  font-size: 35rpx;
  margin: 25rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post .upload-photo {
  width: 100% !important;
  background-color: #ffffff;
  padding: 0 15rpx;
}
.post .show-location {
  background-color: var(--themeColor);
  font-size: 30rpx;
  margin: 10rpx 10rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  display: inline-flex;
}
.post .show-location .location-name {
  float: left;
}
.post .show-location .location-delete {
  float: left;
  vertical-align: middle;
}
.buttons {
  padding: 30rpx 0 50rpx 0;
  bottom: 0;
  background-color: white;
  width: 100%;
  text-align: center;
  position: fixed;
}
.set-anonymous {
  margin: 10rpx 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.set-anonymous .tip {
  margin: 0 10rpx;
}
