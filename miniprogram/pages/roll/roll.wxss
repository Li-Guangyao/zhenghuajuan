page {
  overflow-y: hidden;
}
.main-background {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.buttons {
  position: fixed;
  left: 24rpx;
  top: 80rpx;
  width: 256rpx;
  height: 48rpx;
}
.buttons .icon-button {
  width: 64rpx;
  height: 64rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.shop-board {
  position: fixed;
  top: 10%;
  left: 30%;
  right: 30%;
  width: 40%;
}
.shop-board image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.shop-board image view {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0%;
  bottom: 0%;
  left: 0%;
  right: 0%;
  font-size: 42rpx;
  font-weight: bold;
  line-height: 64rpx;
  color: var(--fontColor);
}
.food-layer {
  position: fixed;
  top: 24%;
  left: 0;
  right: 0;
  width: 100%;
  height: 30%;
}
.food-layer .prev {
  position: absolute;
  width: 28rpx;
  left: 48rpx;
  top: 45%;
}
.food-layer .next {
  position: absolute;
  width: 28rpx;
  right: 48rpx;
  top: 45%;
}
.food-layer .food-select {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 360rpx;
  height: 360rpx;
  background-color: #FCF6EA;
  border: #d9b7ab solid 8rpx;
  border-radius: 32rpx;
  transform: translateX(-50%) translateY(-50%);
  box-shadow: 0 20rpx 36rpx rgba(0, 0, 0, 0.1);
}
.food-layer .food-select .food {
  position: absolute;
  left: 13%;
  right: 13%;
  top: 13%;
  bottom: 13%;
  width: 74%;
  height: 74%;
}
.food-layer .food-select .tips {
  position: absolute;
  top: 100%;
  width: 100%;
  padding-top: 24rpx;
  color: rgba(14, 14, 14, 0.5);
  font-size: 24rpx;
  text-align: center;
}
.input-layer {
  position: absolute;
  width: 70%;
  top: 58%;
  bottom: 192rpx;
  padding-left: 15%;
  padding-right: 15%;
}
.input-layer .time-input {
  width: 100%;
  height: fit-content;
  margin-top: 16rpx;
}
.input-layer .time-input .bar-icon {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  overflow: visible;
}
.input-layer .time-input .bar-icon .drag-prompt {
  position: absolute;
  top: -48rpx;
  width: 100%;
  height: 48rpx;
  background-color: rgba(32, 32, 32, 0.75);
  border-radius: 32rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: var(--themeColor);
}
.input-layer .time-tips {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
  font-size: 24rpx;
  color: rgba(32, 32, 32, 0.5);
  text-align: center;
}
.input-layer .time-tips text {
  margin-left: 8rpx;
  margin-right: 8rpx;
  font-size: 36rpx;
  color: var(--themeColor);
}
.input-layer .time-tips .strict-mode {
  margin-left: 32rpx;
}
.input-layer .time-tips .strict-mode .strict-mode-label {
  color: rgba(32, 32, 32, 0.5);
}
.input-layer .name-edit {
  width: 100%;
  height: 64rpx;
  margin-top: 24rpx;
  color: var(--fontColor);
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input-layer .name-edit image {
  height: 32rpx;
  margin-right: 16rpx;
}
.input-layer .name-edit input {
  display: inline;
  text-align: center;
}
.input-layer .start-button {
  width: 80%;
  height: 108rpx;
  border-radius: 32rpx;
  margin-top: 32rpx;
  margin-left: 10%;
  margin-right: 10%;
}
.input-layer .start-button .button-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input-layer .start-button .button-content .big {
  font-size: 32rpx;
  line-height: 32rpx;
}
.input-layer .start-button .button-content .small {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: lighter;
}
.buy-food {
  color: var(--fontColor);
  font-size: 28rpx;
  background-color: #FCF6EA;
  border-radius: 32rpx;
  width: 80%;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.buy-food .user-roll {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  height: 48rpx;
  display: flex;
  color: var(--themeColor);
  font-size: 32rpx;
  flex-direction: row;
  align-items: center;
}
.buy-food .user-roll image {
  height: 42rpx;
  margin-left: 6rpx;
}
.buy-food .food-name {
  height: 48rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.buy-food .food-desc {
  width: 80%;
  height: 76rpx;
  margin-top: 24rpx;
  text-align: left;
  overflow-y: scroll;
}
.buy-food .food-switch .prev {
  position: absolute;
  width: 28rpx;
  left: 48rpx;
  top: 45%;
}
.buy-food .food-switch .next {
  position: absolute;
  width: 28rpx;
  right: 48rpx;
  top: 45%;
}
.buy-food .food-switch .food-card {
  position: relative;
  display: block;
  height: 324rpx;
  margin-left: auto;
  margin-right: auto;
}
.buy-food .food-switch .food-card .food-image {
  position: absolute;
  display: block;
  width: 60%;
  height: 60%;
  top: 18%;
  left: 16%;
}
.buy-food .food-switch .food-card .food-price {
  position: absolute;
  width: 100%;
  bottom: 12%;
  left: 12%;
  display: flex;
  color: var(--themeColor);
  font-size: 24rpx;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}
.buy-food .food-switch .food-card .food-price image {
  height: 32rpx;
  margin-right: 4rpx;
}
.buy-food .food-time {
  font-size: 24rpx;
  margin: 4rpx auto;
}
.buy-food .food-time text {
  margin-left: 4rpx;
  color: var(--themeColor);
  font-size: 32rpx;
}
.buy-food .confirm-button {
  width: 256rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
  margin-bottom: 20rpx;
  font-weight: normal;
  font-size: 28rpx;
}
.bottom-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: white solid 1rpx;
  background-color: rgba(255, 255, 255, 0.6);
  width: 100%;
  height: 144rpx;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
}
.bottom-bar image {
  height: 100%;
}
