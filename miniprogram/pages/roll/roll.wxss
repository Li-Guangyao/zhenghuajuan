.main-background {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.buttons {
  position: fixed;
  left: 24rpx;
  top: 80rpx;
  width: 256rpx;
  height: 48rpx;
}
.buttons .icon-button {
  width: 64rpx;
  height: 64rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.shop-board {
  position: fixed;
  top: 10%;
  left: 30%;
  right: 30%;
  width: 40%;
}
.shop-board image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.shop-board image view {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0%;
  bottom: 0%;
  left: 0%;
  right: 0%;
  font-size: 42rpx;
  font-weight: bold;
  line-height: 64rpx;
  color: var(--fontColor);
}
.food-layer {
  position: fixed;
  top: 24%;
  left: 0;
  right: 0;
  width: 100%;
  height: 30%;
}
.food-layer .prev {
  position: absolute;
  width: 28rpx;
  left: 48rpx;
  top: 45%;
}
.food-layer .next {
  position: absolute;
  width: 28rpx;
  right: 48rpx;
  top: 45%;
}
.food-layer .food-select {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 360rpx;
  height: 360rpx;
  background-color: #FCF6EA;
  border: #d9b7ab solid 8rpx;
  border-radius: 32rpx;
  transform: translateX(-50%) translateY(-50%);
  box-shadow: 0 20rpx 36rpx rgba(0, 0, 0, 0.1);
}
.food-layer .food-select .food {
  position: absolute;
  left: 10%;
  right: 10%;
  top: 10%;
  bottom: 10%;
  width: 80%;
  height: 80%;
}
.food-layer .food-select .tips {
  position: absolute;
  top: 100%;
  width: 100%;
  padding-top: 24rpx;
  color: rgba(14, 14, 14, 0.5);
  font-size: 24rpx;
  text-align: center;
}
.input-layer {
  position: absolute;
  width: 70%;
  top: 58%;
  bottom: 192rpx;
  padding-left: 15%;
  padding-right: 15%;
}
.input-layer .time-input {
  width: 100%;
  height: fit-content;
  margin-top: 16rpx;
}
.input-layer .time-input .bar-icon {
  width: 72rpx;
  height: 72rpx;
}
.input-layer .time-tips {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: rgba(32, 32, 32, 0.5);
  text-align: center;
}
.input-layer .time-tips text {
  margin-left: 8rpx;
  margin-right: 8rpx;
  font-size: 36rpx;
  color: var(--themeColor);
}
.input-layer .name-edit {
  width: 100%;
  height: 64rpx;
  margin-top: 24rpx;
  color: var(--fontColor);
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input-layer .name-edit image {
  height: 32rpx;
  margin-right: 16rpx;
}
.input-layer .name-edit input {
  display: inline;
  width: 100%;
  text-align: center;
}
.input-layer .start-button {
  width: 80%;
  height: 108rpx;
  border-radius: 32rpx;
  margin-top: 32rpx;
  margin-left: 10%;
  margin-right: 10%;
}
.input-layer .start-button .button-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input-layer .start-button .button-content .big {
  font-size: 32rpx;
  line-height: 32rpx;
}
.input-layer .start-button .button-content .small {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: lighter;
}
.bottom-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: white solid 1rpx;
  background-color: rgba(255, 255, 255, 0.6);
  width: 100%;
  height: 144rpx;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
}
.bottom-bar image {
  height: 100%;
}
