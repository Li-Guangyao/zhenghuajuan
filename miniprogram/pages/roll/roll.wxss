page {
  background-color: var(--themeBackgroundColor);
}
.no-record {    
  top: 40%;
  position: absolute;
  transform: translateY(-50%);
  margin: 0;
  width: 100%;

  display: flex;
  flex-direction:column;
  align-items: center;
}
.no-record image {
  width: 70%;
  margin-bottom: 24rpx;
}
.no-record text {
  font-size: 32rpx;
  color: #B3B3B3;
}
.btn-add {
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  bottom: 20rpx;
  right: 35rpx;
  position: fixed;
}
