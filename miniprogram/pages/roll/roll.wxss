page {
  background-color: var(--themeBackgroundColor);
}
.no-record {    
  top: 40%;
  position: absolute;
  transform: translateY(-50%);
  margin: 0;
  width: 100%;

  display: flex;
  flex-direction:column;
  align-items: center;
}
.no-record image {
  width: 70%;
  margin-bottom: 24rpx;
}
.no-record text {
  font-size: 32rpx;
  color: #B3B3B3;
}
.set-activity {
  text-align: center;
}
.set-activity .van-dialog__header {
  padding: 0;
}
.set-activity .title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 0 32rpx 0;
  height: 80rpx;
  background-color: var(--themeColor);
  color: #ffffff;
}
.set-activity .small-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #808080;
  font-size: 24rpx;
  margin: 0 0 32rpx 0;
}
.set-activity .small-tip image {
  height: 42rpx;
  margin-left: 8rpx
}
.set-activity .activity-name,
.set-activity .activity-time {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin: 24rpx 0 16rpx 0;
  height: 80rpx;
  width: 90%;
  border-radius: 50rpx;
  background-color: #fff2db;
  color: var(--themeColor);
}
.set-activity .activity-name .tip,
.set-activity .activity-time .tip {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: left;
  width: 35%;
  height: inherit;
  border-radius: inherit;
  border: 5rpx solid #fea403;
}
.set-activity .activity-name .input,
.set-activity .activity-time .input {
  text-align: left;
  flex: 3;
  margin: 0 20rpx;
  color: #2f2f2f;
}
.set-activity .activity-name .minute,
.set-activity .activity-time .minute {
  flex: 1;
}
.btn-add {
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  bottom: 20rpx;
  right: 35rpx;
  position: fixed;
}
