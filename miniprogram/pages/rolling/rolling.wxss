page {
  --postFontColor: #613b10;
  background-color: var(--themeBackgroundColor);
  text-align: center;
}
.title {
  font-size: 64rpx;
  color: #FEA403;
  margin: 128rpx 0 0 0;
}
.content {
  padding: 0 96rpx 0 96rpx;
}
.progress-bar {
  margin: 64rpx auto 32rpx auto;
  width: fit-content;
}
.progress-bar .circle {
  width: 256px;
  height: 256px;
  margin: 0 0 32rpx 0;
}
.progress-bar .circle image {
  position: absolute;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  top: 50%;
  height: 35%;
  margin: auto;
}
.progress-bar text {
  font-size: 32rpx;
  color: #515151;
}
.total-progress {
  margin-top: 96rpx;
  border: #FEA403 solid 1px;
  border-radius: 12px;
}
.small-tip {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: left;
  color: #808080;
  font-size: 24rpx;
  margin: 12rpx 0 32rpx 0;
}
.small-tip .number1 {
  color: #FEA403;
}
.small-tip image {
  height: 42rpx;
  margin-left: 12rpx;
}
.small-tip .number2 {
  position: absolute;
  color: #FEA403;
  right: 0;
}
.share__canvas {
  position: fixed;
  top: 100%;
  width: 720rpx;
  height: 1280rpx;
  background: #f0f0f0;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}
.post-container {
  position: fixed;
  background: #f0f0f0;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.post {
  position: relative;
  height: 90%;
}
.post text {
  position: absolute;
  width: 67.5%;
  color: #FFDB93;
  font-size: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-family: "海派腔调清夏简";
}
.post .time {
  top: 13%;
  left: 31.5%;
  transform: skewY(-26.8deg);
}
.post .day {
  top: 45%;
  left: 37%;
  transform: skewY(36.2deg);
}
.post .play {
  top: 67.5%;
  left: 1%;
  text-align: right;
  transform: skewY(-29.6deg);
}
.post .foods {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.post .foods food-display {
  position: absolute;
  width: 25%;
  height: 15%;
}
