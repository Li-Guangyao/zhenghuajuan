.post .post-bottom {
  position: absolute;
  display: block;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
}
.post .post-bottom .avatar {
  position: absolute;
  display: block;
  height: 70%;
  left: 5%;
  top: 15%;
  bottom: 15%;
  border-radius: 100%;
}
.post .post-bottom .info {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: flex-start;
  left: 27.5%;
  top: 15%;
  bottom: 15%;
  width: 45%;
  height: 70%;
  color: var(--postFontColor);
}
.post .post-bottom .info .name {
  width: 100%;
  font-size: 32rpx;
}
.post .post-bottom .info .message {
  width: 100%;
  display: block;
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: left;
}
.post-prompt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90%;
  background-color: transparent !important;
}
.post-prompt .share {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.post-prompt .share .share-button {
  width: 256rpx;
  height: 88rpx;
  border-radius: 32rpx;
  margin-top: 32rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  color: white;
}
.post-prompt .share .share-button .button-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.post-prompt .share .share-button .button-content .big {
  font-size: 28rpx;
  line-height: 28rpx;
}
.post-prompt .share .share-button .button-content .small {
  margin-top: 8rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  font-weight: lighter;
}
