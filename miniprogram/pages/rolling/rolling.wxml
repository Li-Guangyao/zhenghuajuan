<!--miniprogram/pages/rolling.wxml-->
<view class="title">{{name}}味花卷</view>
<view class="content">
	<view class="progress-bar">
		<canvas id="canvasArcCir" type="2d" class="circle">
			<image src="../../icon2/rolling.png" mode="heightFix"></image>
		</canvas>
		<text>{{curMinute < duration ? 
			statuses[statusIndex] : finishText}}</text>
	</view>
	<view class="total-content">
		<progress class="total-progress" percent="{{curMinute/duration*100}}" border-radius="6" 
			activeColor="#FEA403" backgroundColor="#FFFFFF" stroke-width="12"></progress>
			<view class="small-tip">预计可获得
				<text style="color: #FEA403">{{duration}}</text>
				<image src="../../icon/roll2.png" mode="heightFix"></image>
				<text style="color: #FEA403; position: absolute; right: 0">{{curMinuteInt}}/{{duration}}</text></view>

	</view>
</view>
