			<view class="info">
				<view clsas="name">超级长的名字</view>
				<textarea class="message" placeholder="输入你的感想吧~" value="我蒸了啊分钟花卷！" maxlength="20" placeholder-style="font-size: 24rpx"></textarea>
			</view>
		</image>
	</image>

	<view class="share">
		<van-button custom-class="share-button" round color="#ffa600" bind:click="testWxml2Canvas">
			<view class="button-content">
				<view class="big">分享到朋友圈</view>
				<view class="small">每日首次分享3倍奖励</view>
			</view>
		</van-button>
		<van-button custom-class="share-button" round color="#ffa600">
			<view class="button-content">
				<view class="big">分享到动态</view>
				<view class="small">每日首次分享2倍奖励</view>
			</view>
		</van-button>
	</view>
</van-popup>
