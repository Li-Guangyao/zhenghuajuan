<view class="title">{{name}}味{{foodName}}</view>
<!-- 旋转 -->
<!-- 暂时隐藏 -->
<canvas id="progress-canvas" type="2d" class="circle" wx:if="{{true}}">
	<image src="{{foodImage}}" mode="heightFix"></image>
</canvas>
<view class="content">
	<view class="chicken-soup">
		<text>-你要在孤寂里自成一个世界-</text>
	</view>
	<view class="left-time">{{leftTimeStr}}</view>
	<view class="total-content"> 
		<!-- 进度条
		<progress class="total-progress" percent="{{curMinute/duration*100}}" border-radius="6" activeColor="#FEA403"
			backgroundColor="#FFFFFF" stroke-width="12"></progress> -->
		<view class="small-tip">
			<text class="text1">预计可获得</text>
			<text class="number1">{{count}}</text>
			<image src="../../icon/roll2.png" mode="heightFix"></image>
			<!-- <text class="number2">{{curCount}}/{{count}}</text> -->
		</view>
	</view>
</view>

<canvas id="post-canvas" class="post-canvas" type="2d"></canvas>

<!-- 海报弹窗 -->
<van-popup custom-class="post-prompt" show="{{finished}}" bind:close="onClose">
	<!-- <canvas id="post-canvas" type="2d" ></canvas> -->

	<image class="post" src="../../images/post.png" mode="heightFix" >
		<text class="time">本次制作{{duration}}分钟</text>
		<text class="day">连续制作{{continuity}}天</text>
		<text class="play">相当于{{equalActInfo.verb}}了{{equalActInfo.count}}\n{{equalActInfo.act}}</text>
		<view class="foods">
			<food-display class="food1" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food2" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food3" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food4" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food5" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food6" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food7" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food8" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food9" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food10" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food11" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food12" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food13" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food14" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food15" src="{{foodImage}}" mode="aspectFit"></food-display>
			<food-display class="food16" src="{{foodImage}}" mode="aspectFit"></food-display>
		</view>
		<image class="post-bottom" src="../../images/postBottom.png" mode="widthFix">
			<image class="avatar" src="{{userInfo.avatarUrl}}" mode="heightFix"></image>
			<view class="info">
				<view clsas="name">{{userInfo.nickName}}</view>
				<textarea class="message" model:value="{{message}}" placeholder="输入你的感想吧~" maxlength="20" placeholder-style="font-size: 24rpx"></textarea>
			</view>
		</image>
	</image>

	<view class="share">
		<van-button open-type="share" custom-class="share-button" round color="#ffa600" >
			<view class="button-content">
				<view class="big">分享给朋友</view>
				<view class="small" wx:if="{{!sharings[0]}}">每日首次分享2倍奖励</view>
			</view>
		</van-button>
		<van-button custom-class="share-button" round color="#ffa600" bindtap="shareToPost">
			<view class="button-content">
				<view class="big">分享到动态</view>
				<view class="small" wx:if="{{!sharings[1]}}">每日首次分享2倍奖励</view>
			</view>
		</van-button>
	</view>
	<view class="cancel-btn-wrapper">
		<view class='cancel-btn' bindtap="cancelShare">取消分享</view>
  </view>
</van-popup>
