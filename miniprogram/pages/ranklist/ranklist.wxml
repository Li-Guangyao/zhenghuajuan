<view>
	<image class="background" src="../../images/rankListBackground.png" mode="widthFix" />

	<!-- 主页 -->
	<view class="main">
		<!-- 标题前景 -->
		<image class="foreground" src="../../images/rankListForeground.png" mode="widthFix" />
			
		<!-- 榜单切换 -->
		<van-tabs custom-class="tab" tab-class="tab-title" active="{{ active }}" animated color="#ffa600" bind:change="onTabbarChange">
			<van-tab title="日榜" name="day"></van-tab>
			<van-tab title="周榜" name="week"></van-tab>
			<van-tab title="月榜" name="month"></van-tab>
		</van-tabs>

		<!-- 前三名 -->
		<view class="top3">
			<view class="first">
				<view class="rank">1</view>
				<image class="avatar" src="{{topRankList[0].avatarUrl}}"></image>
				<view class="nickname">{{topRankList[0].displayName}}</view>
				<view class="value">{{topRankList[0].totalValue}}
					<image class="icon" src="../../icon/roll2.png"></image>
				</view>
				<view class="text">恭迎卷王！</view>
			</view>
			<view class="second">
				<view class="rank">2</view>
				<image class="avatar" src="{{topRankList[1].avatarUrl}}"></image>
				<view class="nickname">{{topRankList[1].displayName}}</view>
				<view class="value">{{topRankList[1].totalValue}}
					<image class="icon" src="../../icon/roll2.png"></image>
				</view>
			</view>
			<view class="third">
				<view class="rank">3</view>
				<image class="avatar" src="{{topRankList[2].avatarUrl}}"></image>
				<view class="nickname">{{topRankList[2].displayName}}</view>
				<view class="value">{{topRankList[2].totalValue}}
					<image class="icon" src="../../icon/roll2.png"></image>
				</view>
			</view>
		</view>

		<!-- 主体内容 -->
		<view class="content">	
			<view class="rank-item" wx:for="{{weekRankList}}" wx:key="index">
				<view class="left">
					<text class="rank-number">{{index+1}}</text>
					<image class="user-avatar" src="{{item.avatarUrl}}"></image>
					<view class="user-nickname">{{item.displayName}}</view>
				</view>
				<view class="right">
					<view class="juan-number">{{item.totalValue}}</view>
					<image class="juan-image" src="../../icon/roll2.png"></image>
				</view>
			</view>
		</view>

